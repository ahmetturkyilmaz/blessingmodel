<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.blessings.BlessingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/blessingActivityToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbarColor"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:elevation="4dp"
            app:popupTheme="@style/Theme.AppCompat.Light" />

        <Button
            android:id="@+id/blessingZeroButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blessingActivityToolbar"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:text="@string/zeroButton" />

        <ScrollView
            android:id="@+id/blessingScrollSure"

            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_below="@id/blessingZeroButton"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/backgroundColor">

            <TextView
                android:id="@+id/blessingItself"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor" />
        </ScrollView>
        <Button
            android:id="@+id/blessing_text_size_plus_button"

            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_below="@+id/blessingScrollSure"
            android:layout_toEndOf="@+id/blessing_text_size_minus_button"

            android:background="@drawable/text_size_button"
            android:shadowColor="#4232A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/blessing_text_size_minus_button"

            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_below="@+id/blessingScrollSure"
            android:layout_marginEnd="5dp"
            android:layout_alignParentStart="true"

            android:background="@drawable/text_size_button"
            android:shadowColor="#4232A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/blessingNumber"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/blessingScrollSure"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textColor" />
        <Button
            android:id="@+id/blessingCounterButton"
            android:text="+1"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_below="@+id/blessingNumber"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_plus"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>