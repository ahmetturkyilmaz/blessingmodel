<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sure_item"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_margin="4dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/book_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@id/parentText"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/book_image"
            android:id="@+id/sureId"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/sureId"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/sureId"
            android:id="@+id/column"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blessingName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/column"
            android:id="@+id/parentText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blessing"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_below="@+id/parentText"
            android:layout_toEndOf="@+id/book_image"
            android:layout_marginStart="8dp"
            android:id="@+id/childText"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>